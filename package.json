{
    "name": "b4ll-callcentre",
    "version": "1.0.0",
    "description": "A PoC of an account management helpline using voice biometrics",
    "license": "MIT",
    "scripts": {
        "build:clean": "rm -rf -v dist/*",
        "build": "NODE_ENV=${NODE_ENV:-production} webpack --progress",
        "deploy:clean": "env-cmd dev/scripts/clean-deployment.sh",
        "deploy:logs": "env-cmd dev/scripts/logs.sh",
        "deploy": "env-cmd dev/scripts/deploy.sh",
        "dev:build": "webpack -w",
        "dev:clean": "sam-proxy teardown $npm_package_name && docker-compose down",
        "dev:run": "env-cmd dev/scripts/dev.sh",
        "dev": "concurrently \"npm:dev:build\" \"npm:dev:run\" ",
        "env": "cp -n .example.env .env",
        "lint": "prettier --write . && eslint --fix .",
        "postinstall": "yarn env",
        "test": "yarn dev:clean && jest"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)test)\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globalSetup": "./dev/jest-setup.ts",
        "globalTeardown": "./dev/jest-teardown.ts",
        "setupFiles": [
            "./dev/jest-env.ts"
        ],
        "snapshotSerializers": [
            "jest-serializer-xml"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.3",
        "@types/chai": "^4.1.3",
        "@types/jest": "^26.0.5",
        "@types/node": "^18.0.0",
        "@types/qs": "^6.9.7",
        "@types/uglifyjs-webpack-plugin": "^1.1.2",
        "@types/webpack": "^4.41.21",
        "@typescript-eslint/eslint-plugin": "^3.7.0",
        "@typescript-eslint/parser": "^3.7.0",
        "aws-sam-api-proxy": "https://github.com/cjol/aws-sam-api-proxy#npm",
        "aws-sdk": "^2.234.1",
        "concurrently": "^5.2.0",
        "docker-compose": "^0.23.5",
        "dotenv": "^8.2.0",
        "env-cmd": "^10.1.0",
        "eslint": "^7.5.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsdoc": "^39.6.2",
        "format-message": "^6.2.3",
        "fp-ts": "^2.7.0",
        "full-icu": "^1.3.1",
        "husky": "^4.2.5",
        "io-ts": "^2.2.9",
        "jest": "^28.1.1",
        "jest-serializer-xml": "^0.1.15",
        "lint-staged": ">=10",
        "message-format": "^6.2.3",
        "prettier": "^2.0.5",
        "terser-webpack-plugin": "^5.3.3",
        "ts-jest": "^28.0.5",
        "ts-loader": "^4.2.0",
        "ts-node": "^8.10.2",
        "twilio": "^3.77.3",
        "typescript": "^4.7.3",
        "voiceit2-nodejs": "^2.5.3",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "yaml-cfn": "^0.2.0",
        "yarn-audit-fix": "^9.3.1"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix --max-warnings=1",
        "*.{ts,json,md,yml,yaml}": "prettier --write"
    },
    "dependencies": {
        "@mdx-js/react": "^1.5.8",
        "@types/jsonwebtoken": "^8.5.0",
        "axios": "^0.21.2",
        "clsx": "^1.1.1",
        "dotenv-webpack": "^7.1.0",
        "jsonwebtoken": "^8.5.1",
        "react": "^16.8.4",
        "react-dom": "^16.8.4"
    }
}
